<%- include('partials/header') -%>

<% if(recipeTitle){ %>
    

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white"><%= recipeTitle %></div>
        <div class="card-body"><pre><%= recipeSource %></pre></div>
        <div class="card-header bg-primary text-white">Ingredients</div>
        <div class="card-body"><pre><%= recipeIngredients %></pre></div>
        <div class="card-header bg-primary text-white">Instructions</div>
        <div class="card-body"><pre><%= recipeInstructions %></pre></div>
    </div>

    <form action="/rate" method="POST" class="mt-3">
        <input type="hidden" name="mealId" value="<%= mealId %>">
        <button type="submit" name="thumbsUp" value="true" class="btn btn-success">👍</button>
        <button type="submit" name="thumbsUp" value="false" class="btn btn-danger">👎</button>
      </form>
    <a href="/" class="btn btn-outline-primary mt-4">Plan Another Dinner</a>
    <% } %>

<%- include('partials/footer') -%>